{
  "name": "@noction/vue-use-flexsearch",
  "type": "module",
  "version": "1.1.7",
  "packageManager": "pnpm@10.28.0",
  "description": "Vue wrapper for Flexsearch",
  "author": "Noction",
  "license": "MIT",
  "homepage": "https://github.com/Noction/vue-use-flexsearch",
  "repository": {
    "type": "git",
    "url": "https://github.com/Noction/vue-use-flexsearch"
  },
  "bugs": "https://github.com/Noction/vue-use-flexsearch/issues",
  "keywords": [
    "vue",
    "vue3",
    "composable",
    "search",
    "flexsearch",
    "full-text-search",
    "text-search",
    "use-flexsearch"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts --clean",
    "build:watch": "npm run build -- --watch",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type:check": "vue-tsc --noEmit",
    "prepare": "npx simple-git-hooks",
    "release": "bumpp"
  },
  "peerDependencies": {
    "flexsearch": "0.7.43",
    "vue": "^3.3.4"
  },
  "dependencies": {
    "flexsearch": "0.7.43"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.1",
    "@faker-js/faker": "^10.2.0",
    "@types/flexsearch": "0.7.6",
    "@vitest/coverage-v8": "^4.0.17",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "0.20.0-beta.3",
    "typescript": "5.9.3",
    "vitest": "^4.0.17",
    "vue": "^3.5.26",
    "vue-tsc": "^3.2.2"
  }
}
